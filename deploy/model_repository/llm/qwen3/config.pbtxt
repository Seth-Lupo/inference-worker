# Qwen3-4B-Instruct-2507-AWQ-4bit via vLLM Backend
# Serves the main reasoning LLM for the voice agent

name: "qwen3"
backend: "vllm"

# vLLM handles batching internally
max_batch_size: 0

# Required for async vLLM operations
model_transaction_policy {
  decoupled: True
}

# Input/output required by vLLM backend
input [
  {
    name: "text_input"
    data_type: TYPE_STRING
    dims: [ 1 ]
  },
  {
    name: "stream"
    data_type: TYPE_BOOL
    dims: [ 1 ]
    optional: true
  },
  {
    name: "sampling_parameters"
    data_type: TYPE_STRING
    dims: [ 1 ]
    optional: true
  }
]

output [
  {
    name: "text_output"
    data_type: TYPE_STRING
    dims: [ -1 ]
  }
]

# vLLM manages GPU resources internally
instance_group [
  {
    count: 1
    kind: KIND_MODEL
  }
]

# Enable custom metrics reporting
parameters: {
  key: "REPORT_CUSTOM_METRICS"
  value: {
    string_value: "true"
  }
}
