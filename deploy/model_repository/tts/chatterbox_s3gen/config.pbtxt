# Chatterbox S3Gen - Python Backend with torch.compile
# Flow decoder + HiFT vocoder for speech token to audio conversion
#
# Called by chatterbox BLS orchestrator after T3 generates tokens.
# Uses torch.compile() for optimal GPU performance.

name: "chatterbox_s3gen"
backend: "python"
max_batch_size: 1

input [
  {
    name: "speech_tokens"
    data_type: TYPE_INT64
    dims: [ -1 ]
    description: "Speech token IDs from T3"
  },
  {
    name: "s3gen_conditioning"
    data_type: TYPE_UINT8
    dims: [ -1 ]
    description: "Serialized S3Gen ref_dict from voice_encoder"
  },
  {
    name: "n_timesteps"
    data_type: TYPE_INT32
    dims: [ 1 ]
    optional: true
    description: "Diffusion timesteps (default: 7)"
  }
]

output [
  {
    name: "audio"
    data_type: TYPE_FP32
    dims: [ -1 ]
    description: "Audio waveform samples"
  },
  {
    name: "sample_rate"
    data_type: TYPE_INT32
    dims: [ 1 ]
    description: "Output sample rate (24000)"
  }
]

instance_group [
  {
    count: 1
    kind: KIND_GPU
    gpus: [ 0 ]
  }
]

parameters {
  key: "ASSETS_DIR"
  value: { string_value: "/models/tts/chatterbox_assets" }
}

parameters {
  key: "USE_TORCH_COMPILE"
  value: { string_value: "true" }
}

parameters {
  key: "DEFAULT_TIMESTEPS"
  value: { string_value: "7" }
}

version_policy: { latest: { num_versions: 1 } }
