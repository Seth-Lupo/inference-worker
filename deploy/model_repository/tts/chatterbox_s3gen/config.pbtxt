# Chatterbox S3Gen - PyTorch Backend with torch.compile
# Converts speech tokens to audio waveform using flow decoder + HiFT vocoder
#
# Input: Speech tokens + S3Gen conditioning
# Output: Audio waveform (24kHz float32)

name: "chatterbox_s3gen"
backend: "python"
max_batch_size: 1

input [
  {
    # Speech token IDs from T3
    name: "speech_tokens"
    data_type: TYPE_INT64
    dims: [ -1 ]
  },
  {
    # S3Gen conditioning (serialized torch dict)
    name: "s3gen_conditioning"
    data_type: TYPE_UINT8
    dims: [ -1 ]
  },
  {
    # Number of diffusion steps (lower = faster, higher = better quality)
    name: "n_timesteps"
    data_type: TYPE_INT32
    dims: [ 1 ]
    optional: true
  }
]

output [
  {
    name: "audio"
    data_type: TYPE_FP32
    dims: [ -1 ]
  },
  {
    name: "sample_rate"
    data_type: TYPE_INT32
    dims: [ 1 ]
  }
]

instance_group [
  {
    count: 1
    kind: KIND_GPU
    gpus: [ 0 ]
  }
]

parameters {
  key: "ASSETS_DIR"
  value: { string_value: "/models/tts/chatterbox_assets" }
}

parameters {
  key: "USE_TORCH_COMPILE"
  value: { string_value: "true" }
}

parameters {
  key: "DEFAULT_TIMESTEPS"
  value: { string_value: "7" }
}

version_policy: { latest: { num_versions: 1 } }
