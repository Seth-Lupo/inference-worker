# Chatterbox TTS - BLS Orchestrator
#
# Architecture:
#   chatterbox (this model - BLS orchestrator)
#     ├── chatterbox_voice_encoder (Python) - reference audio -> S3Gen conditioning
#     ├── t3 (vLLM via gRPC) - text + conditioning -> speech tokens
#     └── chatterbox_s3gen (Python + torch.compile) - tokens -> audio
#
# This orchestrator calls sub-models via BLS (Business Logic Scripting).
# T3 is called via gRPC since vLLM backends don't support BLS internal calls.

name: "chatterbox"
backend: "python"
max_batch_size: 0

input [
  {
    name: "text"
    data_type: TYPE_STRING
    dims: [1, 1]
  },
  {
    name: "voice_id"
    data_type: TYPE_STRING
    dims: [1]
    optional: true
  },
  {
    name: "reference_audio"
    data_type: TYPE_FP32
    dims: [-1]
    optional: true
  }
]

output [
  {
    name: "audio"
    data_type: TYPE_FP32
    dims: [-1]
  }
]

# Decoupled mode enables streaming audio responses
model_transaction_policy {
  decoupled: True
}

# Single instance - orchestrates calls to sub-models
instance_group [
  {
    count: 1
    kind: KIND_GPU
  }
]

parameters {
  key: "sample_rate"
  value: { string_value: "24000" }
}
