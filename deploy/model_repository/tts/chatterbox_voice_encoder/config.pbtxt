# Chatterbox Voice Encoder - Python Backend
# Extracts S3Gen conditioning from reference audio for voice cloning
#
# Called by chatterbox BLS orchestrator when reference audio is provided.
# Returns serialized S3Gen ref_dict for use by chatterbox_s3gen.

name: "chatterbox_voice_encoder"
backend: "python"
max_batch_size: 1

input [
  {
    name: "reference_audio"
    data_type: TYPE_FP32
    dims: [ -1 ]
  },
  {
    name: "sample_rate"
    data_type: TYPE_INT32
    dims: [ 1 ]
    optional: true
  }
]

output [
  {
    name: "s3gen_conditioning"
    data_type: TYPE_UINT8
    dims: [ -1 ]
  }
]

instance_group [
  {
    count: 1
    kind: KIND_GPU
    gpus: [ 0 ]
  }
]

parameters {
  key: "ASSETS_DIR"
  value: { string_value: "/models/tts/chatterbox_assets" }
}

version_policy: { latest: { num_versions: 1 } }
